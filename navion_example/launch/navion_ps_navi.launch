<?xml version="1.0" encoding="utf-8"?>

<launch>  

    <!-- Navion -->
    <include file="$(find navion_example)/launch/navion_rviz.launch" pass_all_args="true" />


    <!-- Launch joystick and controller node -->
    <rosparam command="load" file="$(find navion_example)/config/ps_navi_controller.yaml" />

    <node respawn="true" pkg="joy" type="joy_node" name="joy_node">
            <param name="autorepeat_rate" value="50"/>
    </node>
    <node pkg="ps_navi_controller" type="ps_navi_controller" name="ps_navi_controller" respawn="false">
        <remap from="/ps_navi_controller/target_mf" to="/backward_model/field"/>
        <remap from="/ps_navi_controller/mca/desired_length" to="/mca/desired_length"/>
    </node>

</launch>
